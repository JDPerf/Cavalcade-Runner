<?xml version="1.0"?>
<ruleset>
	<!-- Add files to check. -->
	<file>inc/</file>
	<file>bin/cavalcade</file>
	<exclude-pattern>bootstrap.php</exclude-pattern>

	<!-- Use HM Coding Standards -->
	<rule ref="vendor/humanmade/coding-standards">
		<!-- Disable dumb DB complaints -->
		<exclude name="WordPress.WP.PreparedSQL" />
		<exclude name="WordPress.DB.RestrictedClasses.mysql" />
		<exclude name="WordPress.DB.RestrictedFunctions.mysql" />
		<exclude name="WordPress.DB.RestrictedFunctions.mysql_mysql_date_format" />
		<exclude name="Squiz.PHP.DisallowMultipleAssignments.Found" />
		<exclude name="WordPress.PHP.DiscouragedPHPFunctions.system_calls_proc_open" />
	</rule>
</ruleset>
